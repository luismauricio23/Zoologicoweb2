@model Zoologico.Models.Parqueadero

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}

<link href="~/Library/style/Workers.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">
        <h2 class="text-center">Registrar Parqueadero</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Id parqueadero</h5>
                @Html.EditorFor(model => model.Id_Parqueadero, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id_Parqueadero, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nombre Parqueadero</h5>
                @Html.EditorFor(model => model.Nombre_Parqueadero, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Parqueadero, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nit Zoologico</h5>
                @Html.DropDownList("Nit_Zoologico", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nit_Zoologico, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-dark" />
                <a href="@Url.Action("Index", "Parqueaderoes")" class="btn btn-success">

                    <i class="icon-pencil icon-white"></i>

                    <span>
                        <strong>Regresar</strong>
                    </span>

                </a>
            </div>

        </div>
    </div>

}