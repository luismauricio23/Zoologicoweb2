@model IEnumerable<Zoologico.Models.Planes>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}



<link href="~/Library/style/Workers.css" rel="stylesheet" />
<br />
<h2 class="text-center">Planes Registrados</h2>

<a href="@Url.Action("Create", "Planes")" class="btn btn-success mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Registrar Plan</strong>
    </span>
</a>

<table class="table">
    <tr>
        <th></th>
        <th>
            Id Plan
        </th>
        <th>
            Nombre
        </th>
        <th>
            Precio
        </th>
        <th>
            Nombre Zoologico
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Plan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Plan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_plan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zoologicos.Nombre_Zoologico)
            </td>



            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Plan }, new { @class = "btn btn-success" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Plan }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Detalle", "Details", new { id = item.Id_Plan }, new { @class = "btn btn-success" })
            </td>


        </tr>
    }

</table>
