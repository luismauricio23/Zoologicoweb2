@model IEnumerable<Zoologico.Models.Modelo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}

 <style>
 .mao {
 margin-left: 30px;
 margin-bottom: 20px;
 }
</style>
    <h2 class="text-center">Modelo Empleados</h2>

    <a href="@Url.Action("Create", "Modeloes")" class="btn btn-outline-dark mao">
        <i class="icon-pencil icon-white"></i>
        <span>
            <strong>Nuevo Modelo</strong>
        </span>
    </a>
<table class="table">
    <tr>
        <th>
            <h5>Identificador</h5>
        </th>
        <th>
            <h5>Nombre</h5>
        </th>
        <th>
           
        </th>
        <th>
           
        </th>

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-outline-danger" })
        @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "btn btn-outline-primary" })
    </td>
    <td>

    </td>
</tr>
}

</table>
