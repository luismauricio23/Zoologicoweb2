@model Zoologico.Models.Modelo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
    <style>
        .form-group {
            margin-left: 70px;
        }
    </style>

<div>
    <h4 class="text-center">Detalle Modelo</h4>
    <hr />
    <form class="label">
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>id</h5>
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nombre</h5>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <a href="@Url.Action("Index", "Modeloes")" class="btn btn-outline-dark">
                <i class="icon-pencil icon-white"></i>
                <span>
                    <strong>Regresar</strong>
                </span>
            </a>
            @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-outline-info" })
        </div>
    </div>
</div>

