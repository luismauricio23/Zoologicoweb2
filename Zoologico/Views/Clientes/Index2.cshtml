@model IEnumerable<Zoologico.Models.Cliente>

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_LayoutVistaVendedor.cshtml";
}
<style>

    .mao {
        margin-left: 30px;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Clientes Registrados</h2>


<a href="@Url.Action("Create2", "Clientes")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Registrar Cliente</strong>
    </span>
</a>

<table class="table">
    <tr>
        <th>
            Cedula
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Direccion
        </th>
        <th>
            Telefono
        </th>
        <th>
            Edad
        </th>
        <th>
            Password
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass_Cliente)
            </td>


            <td>
                @Html.ActionLink("Editar", "Edit2", new { id = item.Cedula_Cliente }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Eliminar", "Delete2", new { id = item.Cedula_Cliente }, new { @class = "btn btn-outline-danger" })
                @Html.ActionLink("Detalle", "Details2", new { id = item.Cedula_Cliente }, new { @class = "btn btn-outline-primary" })
            </td>


        </tr>
    }

</table>


