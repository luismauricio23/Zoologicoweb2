@model IEnumerable<Zoologico.Models.Rol_operacion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}

<style>
    .mao {
        margin-left: 30px;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Rol de Operaciones</h2>

<a href="@Url.Action("Create", "Rol_Operacion")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>nuevo Rol de Operaciones</strong>
    </span>
</a>
<table class="table">
    <tr>
        <th>
            <h5>Identificador</h5>
        </th>
        <th>
            <h5>Nombre operacion</h5>
        </th>
        <th>
            <h5>Nombre Rol</h5>
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Operacion.id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Operacion.nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rol.nombre)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-outline-danger" })
        @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "btn btn-outline-primary" })
    </td>
</tr>
    }

</table>
