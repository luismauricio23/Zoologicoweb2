@model Zoologico.Models.Compra

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}


<style>

    .form-group {
        margin-left: 70px;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <form>
        <h4 class="text-center">Modificar Compra</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Numero_Compra)
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Fecha Compra</h5>
                @Html.EditorFor(model => model.Fecha_Compra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_Compra, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Cantidad Tiquetes</h5>
                @Html.EditorFor(model => model.Cantidad_Compra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cantidad_Compra, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-5">
                <h5>Valor</h5>
                @Html.EditorFor(model => model.Valor_Compra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor_Compra, "", new { @class = "text-danger", @readonly = "readonly" })
            </div>
            <div class="form-group col-md-5">
                <h5>Id Plan</h5>
                @Html.EditorFor(model => model.Id_Plan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id_Plan, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Cedula Cliente</h5>
                @Html.EditorFor(model => model.Cedula_Cliente, new { htmlAttributes = new { @class = "form-control " } })
                @Html.ValidationMessageFor(model => model.Cedula_Cliente, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-dark" />
                <a href="@Url.Action("Index", "Compras")" class="btn btn-outline-dark">
                    <i class="icon-pencil icon-white"></i>
                    <span>
                        <strong>Regresar</strong>
                    </span>
                </a>
            </div>

        </div>

    </form>

}