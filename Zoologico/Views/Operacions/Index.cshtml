@model IEnumerable<Zoologico.Models.Operacion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<link href="~/Library/style/Workers.css" rel="stylesheet" />

<h2 class="text-center">Modelo Operacion</h2>

<a href="@Url.Action("Create", "Operacions")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Nueva Operacion</strong>
    </span>
</a>
<table class="table">
    <tr>
        <th>
            <h5>Identificador</h5>
        </th>
        <th>
            <h5>Nombre operacion</h5>
        </th>
        <th>
            <h5>Nombre Modelo</h5>
        </th>
        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo.nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-outline-danger" })
                @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "btn btn-outline-primary" })
            </td>
        </tr>
    }

</table>
