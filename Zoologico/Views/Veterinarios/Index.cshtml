@model IEnumerable<Zoologico.Models.Veterinario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<style>
    .mao {
        margin-left: 30px;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Veterinarios</h2>

<a href="@Url.Action("Create", "Veterinarios")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Nuevo Veterinario</strong>
    </span>
</a>
<table class="table">
    <tr>
        <th>
            <h5>Cedula</h5>
        </th>
        <th>
            <h5>Nombre</h5>
        </th>
        <th>
            <h5>Apellido</h5>
        </th>
        <th>
            <h5>Telefono</h5>
        </th>
        <th>
            <h5>Direccion</h5>
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Cedula_Veterinario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_Veterinario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellido_Veterinario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefono_Veterinario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Direccion_Veterinario)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Cedula_Veterinario }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Cedula_Veterinario }, new { @class = "btn btn-outline-danger" })
        @Html.ActionLink("Detalle", "Details", new { id = item.Cedula_Veterinario }, new { @class = "btn btn-outline-primary" })
    </td>
</tr>
    }

</table>
