@model Zoologico.Models.Veterinario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<style>
    .form-group {
        margin-left: 70px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<form>
    <h4 class="text-center">Nuevo Veterinario </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-row">
    <div class="form-group col-md-5">
        <h5>Cedula </h5>
        @Html.EditorFor(model => model.Cedula_Veterinario, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Cedula_Veterinario, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-5">
        <h5>Nombre</h5>
        @Html.EditorFor(model => model.Nombre_Veterinario, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre_Veterinario, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-5">
        <h5>Apellido</h5>
        @Html.EditorFor(model => model.Apellido_Veterinario, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Apellido_Veterinario, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-5">
        <h5>Telefono</h5>
        @Html.EditorFor(model => model.Telefono_Veterinario, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Telefono_Veterinario, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-5">
        <h5>Direccion</h5>
        @Html.EditorFor(model => model.Direccion_Veterinario, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Direccion_Veterinario, "", new { @class = "text-danger" })
    </div>

</div>

   
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-outline-dark" />
            <a href="@Url.Action("Index", "Veterinarios")" class="btn btn-outline-dark">
                <i class="icon-pencil icon-white"></i>
                <span>
                    <strong>Regresar</strong>
                </span>
            </a>
        </div>
    </div>
</form>
    
    }


