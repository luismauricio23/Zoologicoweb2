@model Zoologico.Models.Zoologicos

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}

<style>


    .form-group {
        margin-left: 70px;
    }

    .float {
        margin-left: 1000px;
    }

    .form-actions {
        margin-left: 70px;
        margin-top: 15px;
    }

    .t {
        margin-bottom: 50px;
        margin-top: -80px;
        margin-left: 55px;
    }
</style>

<div>
    <h4 class="text-center">Informacion Del Zoologico</h4>
    <hr />
    <form class="label">
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Nit</h5>
                @Html.EditorFor(model => model.Nit_Zoologico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Nit_Zoologico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nombre</h5>
                @Html.EditorFor(model => model.Nombre_Zoologico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Nombre_Zoologico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Direccion</h5>
                @Html.EditorFor(model => model.Direccion_Zoologico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Direccion_Zoologico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Telefono</h5>
                @Html.EditorFor(model => model.Telefono_Zoologico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Telefono_Zoologico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Departamento</h5>
                @Html.EditorFor(model => model.Departamento_zoologico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Departamento_zoologico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Ciudad</h5>
                @Html.EditorFor(model => model.Ciudad_zoologico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Ciudad_zoologico, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <a href="@Url.Action("Index", "Zoologicos")" class="btn btn-outline-dark">
                    <i class="icon-pencil icon-white"></i>
                    <span>
                        <strong>Regresar</strong>
                    </span>
                </a>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Nit_Zoologico }, new { @class = "btn btn-outline-info" })
            </div>
        </div>
    </form>

</div>