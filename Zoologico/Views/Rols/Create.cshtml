@model Zoologico.Models.Rol

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
    <style>
        .form-group {
            margin-left: 70px;
        }
    </style>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<form>
    <h4 class="text-center">Nuevo Rol </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row">
        <div class="form-group col-md-5">
            <h5>Nombre del rol</h5>
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
  
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-outline-dark" />
            <a href="@Url.Action("Index", "Rols")" class="btn btn-outline-dark">
                <i class="icon-pencil icon-white"></i>
                <span>
                    <strong>Regresar</strong>
                </span>
            </a>
        </div>
    </div>


</form>
}

