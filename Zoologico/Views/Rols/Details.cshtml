@model Zoologico.Models.Rol

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<link href="~/Library/style/Workers.css" rel="stylesheet" />

<br />
<div>
    <h4 class="text-center">Detalle Rol </h4>
    <hr />
    <form class="label">
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>identificador</h5>
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nombre de Rol</h5>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <a href="@Url.Action("Index", "Rols")" class="btn btn-success">
                <i class="icon-pencil icon-white"></i>
                <span>
                    <strong>Regresar</strong>
                </span>
            </a>
            @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-outline-dark" })
        </div>
    </div>
</div>