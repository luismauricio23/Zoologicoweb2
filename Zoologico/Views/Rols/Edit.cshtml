@model Zoologico.Models.Rol

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<link href="~/Library/style/Workers.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <form>
        <h4 class="text-center">Editar rol</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Nombre del rol</h5>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-dark" />
                <a href="@Url.Action("Index", "Rols")" class="btn btn-success">
                    <i class="icon-pencil icon-white"></i>
                    <span>
                        <strong>Regresar</strong>
                    </span>
                </a>
            </div>
        </div>

    </form>
}

