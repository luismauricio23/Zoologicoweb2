@model Zoologico.Models.Citas

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}

<link href="~/Library/style/Workers.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <h4 class="text-center">Registrar Nueva Cita</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">

            <div class="form-group col-md-5">
                <h5>Hora Inicio</h5>
                @Html.EditorFor(model => model.Hora_inicio_Cita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hora_inicio_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Hora Fin</h5>
                @Html.EditorFor(model => model.Hora_fin_Cita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hora_fin_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Codigo</h5>
                @Html.EditorFor(model => model.Codigo_Cita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Codigo_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Veterinario</h5>
                @Html.DropDownList("Cedula_Veterinario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cedula_Veterinario, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Animal</h5>
                @Html.DropDownList("Id_Animal", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Animal, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Diagnostico</h5>

                @Html.EditorFor(model => model.Diagnostico_Cita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Diagnostico_Cita, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-md-5">
                <h5>Observaciones</h5>
                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-dark" />
                <a href="@Url.Action("Index", "Citas")" class="btn btn-outline-dark">
                    <i class="icon-pencil icon-white"></i>
                    <span>
                        <strong>Regresar</strong>
                    </span>
                </a>
            </div>
        </div>

    </form>
}


