@model IEnumerable<Zoologico.Models.Citas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<style>
    .mao {
        margin-left: 30px;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Citas Asignadas</h2>

<a href="@Url.Action("Create", "Citas")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Asignar Cita</strong>
    </span>
</a>
<table class="table">
    <tr>
        <th>
            <h5>Codigo</h5>
        </th>
        <th>
            <h5>Hora Inicio</h5>
        </th>
        <th>
            <h5>Hora Final</h5>
        </th>
        <th>
            <h5>Diagnostico</h5>
        </th>
        <th>
            <h5>Observaciones</h5>
        </th>
        <th>
            <h5>Animal</h5>
        </th>
        <th>
            <h5>Veterinario</h5>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Codigo_Cita)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hora_inicio_Cita)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hora_fin_Cita)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Diagnostico_Cita)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Observaciones)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Animales.Nombre_Animal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Veterinario.Nombre_Veterinario)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Codigo_Cita }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Codigo_Cita }, new { @class = "btn btn-outline-danger" })
        @Html.ActionLink("Detalle", "Details", new { id = item.Codigo_Cita }, new { @class = "btn btn-outline-primary" })
    </td>
</tr>
    }

</table>
