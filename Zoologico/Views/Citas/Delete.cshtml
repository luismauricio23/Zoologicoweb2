@model Zoologico.Models.Citas

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
    <br />
<link href="~/Library/style/Workers.css" rel="stylesheet" />
<img src="~/Library/Imagenes/warning.png" class="float" height="120" width="120">

<div class="alert alert-warning col-md-4 t">
    <strong>Peligro!</strong> Esta seguro que quiere eliminar esto
</div>
<div>
    <hr />
    <form class="label">
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Hora Inicio</h5>
                @Html.EditorFor(model => model.Hora_inicio_Cita, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Hora_inicio_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Hora Fin</h5>
                @Html.EditorFor(model => model.Hora_fin_Cita, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Hora_fin_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Codigo Cita</h5>
                @Html.EditorFor(model => model.Codigo_Cita, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Codigo_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>veterinario</h5>
                @Html.EditorFor(model => model.Veterinario.Nombre_Veterinario, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Cedula_Veterinario, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Animal</h5>
                @Html.EditorFor(model => model.Animales.Nombre_Animal, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Id_Animal, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Diagnostico</h5>
                @Html.EditorFor(model => model.Diagnostico_Cita, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Diagnostico_Cita, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Observaciones</h5>
                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
            </div>
        </div>
    </form>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Regresar", "Index", new { id = Model.Id_Animal }, new { @class = "btn btn-success" })
        </div>
    }

</div>

