@model IEnumerable<Zoologico.Models.Animales>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_LayoutVistaTrabajadores.cshtml";
}

<style>
    .mao {
        margin-left: 30px;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Animales Registrados</h2>

<a href="@Url.Action("Create2", "Animales")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Registrar Nuevo Animal</strong>
    </span>
</a>

<table class="table">
    <tr>
        <th></th>
        <th>
            <h5>Nombre</h5>
        </th>
        <th>
            <h5>Especie</h5>
        </th>
        <th>
            <h5>Edad</h5>
        </th>
        <th>
            <h5>Tiempo en el Zoologico</h5>
        </th>
        <th>
            <h5>Zona</h5>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td></td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_Animal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Especie_Animal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Edad_Animal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tiempo_Zoologico)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Zonas.Nombre_Zona)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit2", new { id = item.Id_Animal }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Eliminar", "Delete2", new { id = item.Id_Animal }, new { @class = "btn btn-outline-danger" })
        @Html.ActionLink("Hoja de Vida", "Details2", new { id = item.Id_Animal }, new { @class = "btn btn-outline-primary" })
    </td>
</tr>
    }

</table>


