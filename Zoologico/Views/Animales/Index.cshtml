@model IEnumerable<Zoologico.Models.Animales>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<link href="~/Library/style/Workers.css" rel="stylesheet" />
<br />
<h2 class="text-center">Animales Registrados</h2>

<a href="@Url.Action("Create", "Animales")" class="btn btn-success mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Registrar Nuevo Animal</strong>
    </span>
</a>

<table class="table">
    <tr>
        <th></th>
        <th>
            <h5>Nombre</h5>
        </th>
        <th>
            <h5>Especie</h5>
        </th>
        <th>
            <h5>Edad</h5>
        </th>
        <th>
            <h5>Tiempo en el Zoologico</h5>
        </th>
        <th>
            <h5>Zona</h5>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Animal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie_Animal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad_Animal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tiempo_Zoologico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zonas.Nombre_Zona)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Animal }, new { @class = "btn btn-success" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Animal }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Hoja de Vida", "Details", new { id = item.Id_Animal }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>
