@model Zoologico.Models.Zonas

@{
    ViewBag.Title = "Edit2";
    Layout = "~/Views/Shared/_LayoutVistaTrabajadores.cshtml";
}

    <link href="~/Library/style/Workers.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <form>

        <h4 class="text-center">Editar Zona</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Zona)

        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Identidicador </h5>
                @Html.EditorFor(model => model.Id_Zona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id_Zona, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nombre</h5>
                @Html.EditorFor(model => model.Nombre_Zona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Zona, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Nombre Zoologico</h5>
                @Html.DropDownList("Nit_Zoologico", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nit_Zoologico, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-dark" />
                <a href="@Url.Action("Index2", "Zonas")" class="btn btn-success">
                    <i class="icon-pencil icon-white"></i>
                    <span>
                        <strong>Regresar</strong>
                    </span>
                </a>
            </div>
        </div>
    </form>
}




