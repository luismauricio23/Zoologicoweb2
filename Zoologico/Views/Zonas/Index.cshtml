        <th>

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td></td>
    <td>
        @Html.DisplayFor(modelItem => item.Id_Zona)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_Zona)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Zoologicos.Nombre_Zoologico)
    </td>
    <td>

    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Zona }, new { @class = "btn btn-success" })
