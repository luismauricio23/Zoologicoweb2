@model IEnumerable<Zoologico.Models.Zonas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<style>
    .mao {
        margin-left: 30px;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Zonas</h2>

<a href="@Url.Action("Create", "Rols")" class="btn btn-outline-dark mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Nuevo Zona</strong>
    </span>
</a>
<table class="table">
    <tr>
        <th>
            <h5>Identificador</h5>
        </th>
        <th>
            <h5>Zonas</h5>
        </th>
        <th>
            <h5>Zoologico</h5>
        </th>
        <th>

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id_Zona)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_Zona)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Zoologicos.Nombre_Zoologico)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Zona }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Zona }, new { @class = "btn btn-outline-danger" })
        @Html.ActionLink("Detalle", "Details", new { id = item.Id_Zona }, new { @class = "btn btn-outline-primary" })
    </td>
</tr>
    }

</table>
