@model Zoologico.Models.Vehiculo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}

<link href="~/Library/style/Workers.css" rel="stylesheet" />
<br />
<img src="~/Library/Imagenes/warning.png" class="float" height="120" width="120">
<div class="alert alert-warning col-md-4 t">
    <strong>Peligro!</strong> Esta seguro que quiere eliminar esto
</div>
<div>
    <hr />
    <form class="label">
        <div class="form-row">
            <div class="form-group col-md-5">
                <h5>Placa</h5>
                @Html.EditorFor(model => model.Placa_Vehiculo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Placa_Vehiculo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Tipo Vehiculo</h5>
                @Html.EditorFor(model => model.Tipo_Vehiculo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Tipo_Vehiculo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Marca</h5>
                @Html.EditorFor(model => model.Marca_vehiculo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Marca_vehiculo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Estado</h5>
                @Html.EditorFor(model => model.Estado_Vehiculo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Estado_Vehiculo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <h5>Hora de Ingreso</h5>
                @Html.EditorFor(model => model.Hora_Ingreso_vehiculo, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Hora_Ingreso_vehiculo, "", new { @class = "text-danger" })
            </div>


        </div>
    </form>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Regresar", "Index", new { id = Model.Placa_Vehiculo }, new { @class = "btn btn-success" })
        </div>
    }

</div>