@model IEnumerable<Zoologico.Models.Vehiculo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrabajadores.cshtml";
}
<link href="~/Library/style/Workers.css" rel="stylesheet" />
<br />
<h2 class="text-center">Vehiculos Registrados</h2>
<a href="@Url.Action("Create", "Vehiculoes")" class="btn btn-success mao">
    <i class="icon-pencil icon-white"></i>
    <span>
        <strong>Registrar Vehiculo</strong>
    </span>
</a>

<table class="table">
    <tr>
        <th></th>
        <th>
            Placa Vehiculo
        </th>
        <th>
            Tipo Vehiculo
        </th>
        <th>
            Marca
        </th>
        <th>
            Estado
        </th>
        <th>
            Hora de Ingreso
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa_Vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca_vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_Vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora_Ingreso_vehiculo)
            </td>


            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Placa_Vehiculo }, new { @class = "btn btn-success" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Placa_Vehiculo }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Detalle", "Details", new { id = item.Placa_Vehiculo }, new { @class = "btn btn-success" })
            </td>


        </tr>
    }

</table>
