<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    <link href="~/Library/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Library/style/main.css" rel="stylesheet" />
    @RenderSection("Css", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Zoologico</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Acceso")">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#"> </a>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <script src="~/Library/jquery/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Library/Bootstrap/bootstrap.min.js"></script>
    <script src="~/Library/Bootstrap/popper.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
